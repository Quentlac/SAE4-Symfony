{% extends 'base.html.twig' %}

{% block title %}CompteEtudiant{% endblock %}

{% block body %}
    <h1>CompteEtudiant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte_etudiant.id }}</td>
            </tr>
            <tr>
                <th>Numero INE</th>
                <td>{{ compte_etudiant.etudiant.numeroINE }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ compte_etudiant.etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ compte_etudiant.etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ compte_etudiant.etudiant.email }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ compte_etudiant.login }}</td>
            </tr>
            <tr>
                <th>Parcours</th>
                <td>{{ compte_etudiant.parcours }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in compte_etudiant.roles %}
                        <span class="tag">{{ (role | split('_'))[1] }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Derniere Connexion</th>
                <td>{{ compte_etudiant.derniereConnexion ? compte_etudiant.derniereConnexion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat Recherche</th>
                <td>{{ compte_etudiant.etatRecherche.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_compte_etudiant_index') }}" class="btn btn-secondary col-md-1">Retour Liste</a>

    <a href="{{ path('app_compte_etudiant_edit', {'id': compte_etudiant.id}) }}" class="btn btn-primary col-md-1">Editer</a>

    {{ include('Admin/fusionEtudiantCompte/_delete_form.html.twig') }}
{% endblock %}
